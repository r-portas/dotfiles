""""""""""""""""""""""""""""""""""""""""""""""""""""
" Vim configuration
"
" Author: Roy Portas - www.royportas.com
" Version 2.0
""""""""""""""""""""""""""""""""""""""""""""""""""""

set background=light
" Keyboard shortcuts
:inoremap jj <esc>

" Allow system clipboard
set clipboard=unnamed

" Enable syntax highlighting
syntax enable

" Better block indenting
vnoremap > >gv
vnoremap < <gv

" Line numbering
set number
set numberwidth=5

" Allow mouse input
set mouse=a

" Lazy redrawing
set lazyredraw

" 1 tab == 4 spaces
set expandtab
set softtabstop=4
set shiftwidth=4

" Autoindent stuff
set ai
set si
set wrap

" Command line completion
set wildmenu
set showcmd

" Always show the current position
set ruler

" Always show status line
set laststatus=2

" Search configuration
set incsearch
set hlsearch
set ignorecase

" Highlight matching brackets
set showmatch

" Disable backups
set nobackup
set nowritebackup
set noswapfile

" Automatically reload the file when it is changed
set autoread

" Fix backspace
set backspace=indent,eol,start

" Show the current mode
set showmode

" Set paste toggle
set pastetoggle=<F11>

" Filetype plugins
filetype plugin on
filetype indent on

" Send more characters
set ttyfast

" Define how split works
set splitbelow
set splitright

" Disable intro message
set shortmess=atI

" Set colour column
" set colorcolumn=80

" Setup gvim options
if has("gui_running")
	set guifont=Consolas:h12
end

" Hide the duplicated data caused by lightline
set noshowmode
